{
	"manifest_version": 3,
	"name": "Open Tab Next to Active",
	"version": "1.0.0",
	"description": "Opens new tabs next to the currently active tab for better workflow",
	"permissions": [
		"tabs",
		"bookmarks",
		"storage"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_start",
			"all_frames": false
		}
	],
	"commands": {
		"new-tab": {
			"suggested_key": {
				"default": "Ctrl+T"
			},
			"description": "Open new tab next to active tab"
		}
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}